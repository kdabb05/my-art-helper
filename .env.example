# Copy this file to .env or set the variables in your environment
OPENAI_API_KEY=your_api_key_here


# To use OpenRouter, set this to: https://openrouter.ai/api/v1
# and provide an OpenRouter API key in OPENAI_API_KEY
OPENAI_API_BASE=https://openrouter.ai/api/v1

# Optional: model name (defaults to mistralai/mistral-small-creative)
OPENAI_MODEL=mistralai/mistral-small-creative

# Optional: enable debug output
DEBUG_OPENAI=false
